            <Label text="Actif:" style="-fx-font-weight: bold; -fx-text-fill: #34495e;" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
            <CheckBox fx:id="cbActif" GridPane.columnIndex="3" GridPane.rowIndex="0" selected="true"/>
            
            <Label text="PrÃ©nom:" style="-fx-font-weight: bold; -fx-text-fill: #34495e;" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
