        <Label text="ðŸ‘¥ Liste des Membres" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-padding: 10 0 10 0; -fx-border-color: #3498db; -fx-border-width: 0 0 2 0;"/>
        
        <TableView fx:id="tableViewMembres" VBox.vgrow="ALWAYS" style="-fx-padding: 10 0 0 0;">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="60" sortable="true"/>
                <TableColumn fx:id="colNom" text="Nom" prefWidth="140" sortable="true"/>
                <TableColumn fx:id="colPrenom" text="PrÃ©nom" prefWidth="140" sortable="true"/>
                <TableColumn fx:id="colEmail" text="Email" prefWidth="220" sortable="true"/>
