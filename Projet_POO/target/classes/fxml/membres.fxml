            <!-- Boutons -->
            <HBox spacing="10" GridPane.columnIndex="0" GridPane.columnSpan="4" GridPane.rowIndex="3" style="-fx-padding: 15 0 0 0;">
                <Button fx:id="btnAjouter" text="âœ“ Ajouter" onAction="#handleAjouter"
