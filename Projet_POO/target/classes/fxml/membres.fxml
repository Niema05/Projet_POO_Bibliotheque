                <Button fx:id="btnSupprimer" text="ðŸš« DÃ©sactiver" onAction="#handleSupprimer"
                        style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 25; -fx-border-radius: 4; -fx-cursor: hand;"/>
            </HBox>
        </GridPane>
    </VBox>
    
    <!-- Barre de recherche -->
